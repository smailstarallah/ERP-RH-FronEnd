# Variables d'environnement pour le frontend ERP-RH
# Les variables doivent commencer par VITE_ pour être exposées côté client

# URL de base de l'API REST
VITE_API_URL=http://localhost:8080

# URL de base pour les endpoints API
VITE_API_BASE_URL=http://localhost:8080/api

# Configuration WebSocket
VITE_WS_URL=http://localhost:8080/ws/alertes

# Configuration des reconnexions WebSocket
VITE_WS_MAX_RECONNECT=5
VITE_WS_BASE_DELAY=1000
VITE_WS_MAX_DELAY=30000

# Timeouts des requêtes (en millisecondes)
VITE_REQUEST_TIMEOUT=10000

# Debug mode
VITE_DEBUG_MODE=true
